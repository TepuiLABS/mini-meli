{
    "name": "tepuilabs/mini-meli",
    "description": "Generate access tokens",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "angel cruz",
            "email": "angel@tepuilabs.dev"
        }
    ],
    "require": {
        "devcoder-xyz/php-dotenv": "^1.0",
        "guzzlehttp/guzzle": "^7.3"
    },
	"autoload": {
		"psr-4": {
			"Tepuilabs\\MiniMeLi\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tepuilabs\\MiniMeLi\\Tests\\": "tests"
		}
	},
	"scripts": {
		"psalm": "vendor/bin/psalm",
		"test": "vendor/bin/phpunit",
		"test-coverage": "vendor/bin/phpunit --coverage-html coverage",
		"format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
		"all": "composer psalm && composer format"
	},
	"config": {
		"sort-packages": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"funding": [
		{
			"type": "patreon",
			"url": "https://www.patreon.com/angelcruzdev"
		},
		{
			"type": "other",
			"url": "https://ko-fi.com/angelcruzdev"
		}
	],
    "require-dev": {
        "abr4xas/utils": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.7"
    }
}
